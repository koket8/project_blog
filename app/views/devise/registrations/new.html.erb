

<div class="container">

<div class="center">
<h1>Crear cuenta</h1>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  
<div class="field">
   
    <%= f.text_field :username, autocomplete: "off", class: "form-control", placeholder: "nombre de usuario" %>
  </div>

<h2> si quieres subir una foto de perfil necesitas registrarte en <a href="https://es.gravatar.com/"> gravatar </a> con este mismo email </h2>

  <div class="field">
   
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "email" %>
  </div>

  <div class="field">
   
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "contraseÃ±a" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "repetir contraseÃ±a" %>
  </div>

  <div class="actions">
    <%= f.submit "registrarse", class: "btn be-red white" %>
  </div>
<% end %>

<p style="margin-top: 10px">ya tienes una <%= link_to "cuenta", new_car_session_path %>?</p>


</div>